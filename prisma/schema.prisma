generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id               Int            @id @default(autoincrement())
  run              String         @unique
  nombre           String
  apellido_paterno String
  apellido_materno String
  fono             Int            @unique
  email            String         @unique
  password         String?
  tipo_usuario_id  Int
  tipo_usuario     Tipo_usuario   @relation(fields: [tipo_usuario_id], references: [id])
  orden_compra     Orden_Compra[]
  actividades      Actividad[]    @relation("UsuarioActividades")
  solicitudes      Solicitud[]
}

model Tipo_usuario {
  id          Int       @id @default(autoincrement())
  descripcion String    @unique
  usuarios    Usuario[]
}

model Orden_Compra {
  id         Int     @id @default(autoincrement())
  numero_oc  Int     @unique
  usuario_id Int
  usuario   Usuario @relation(fields: [usuario_id], references: [id])
}

model Solicitud {
  id          Int        @id @default(autoincrement())
  descripcion String?
  estado      Boolean
  id_alumno   Int
  alumno      Usuario    @relation(fields: [id_alumno], references: [id])
  actividad   Actividad?
}

model Actividad {
  id_actividad        Int          @id @default(autoincrement())
  fecha_actividad     DateTime
  hora_inic_activdad  DateTime
  hora_term_actividad DateTime
  area_trabajo_id     Int
  area_trabajo        Area_trabajo @relation(fields: [area_trabajo_id], references: [id])
  run_alumno          String
  usuario             Usuario      @relation("UsuarioActividades", fields: [run_alumno], references: [run])
  solicitud_id        Int          @unique
  solicitud           Solicitud    @relation(fields: [solicitud_id], references: [id])
}

model Area_trabajo {
  id        Int         @id @default(autoincrement())
  nombre    String      @unique
  actividad Actividad[]
}
